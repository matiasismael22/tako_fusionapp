<div class="row">
<p id="notice"><%= notice %></p>
  <br>
<h1>Productos Delivery</h1>
  <br>
    <hr>
  <br>
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Imagen</th>
      <th>Nombre Promo</th>
       <th>Descripcion</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
      <div id="fb-root">
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><div class="fb-like" data-href="https://www.facebook.com/takofusion/" data-layout="button" data-action="like" data-size="small" data-show-faces="false" data-share="true"></div></td>
        </div>
        <% if user_signed_in? %>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Estas Seguro que quieres eliminar?' } %></td>
        <%else%>
      <% end%>
        <td><button id="add" class="btn btn-warning" type="button" data-id="<%= product.id%>"> AÃ±adir al carro</button></td>
      
      </tr>
    <% end %>

  </tbody>
</table>
</div>
<br>
  <div style="margin-left: 400px; padding-bottom: 20px">
     <% if user_signed_in? %>
     <%= link_to 'Agregar Nuevo Producto', new_product_path, class:'btn btn-warning btn-md' %>
     <% end%>
  </div>      
        
</div>

