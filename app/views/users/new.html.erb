
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:notice] %>
      <div class="alert alert-info">
        <button id="notice" type="button" class="close" data-dismiss="alert">&times;</button>       <%=flash[:notice]%>
      </div>
    <%end%>


    <h1>Agregar Nuevo Usuario</h1>
    <br>

    <%= form_tag users_create_user_path do  %>

      <div class="field">
        <h4>Email: </h4>
        <%= text_field_tag :email %>
      </div>
      <div class="field">
        <h4>Contrase√±a:</h4>
        <%= password_field_tag :password %>
      </div>
      <div class="actions">
        <%= submit_tag 'Agregar usuario', class:"btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div>
  <ul class="pager">
    <li><%= link_to 'Volver', users_index_path, class:"btn btn-info", :style=>'color:black;' %></li>
  </ul>
</div>
