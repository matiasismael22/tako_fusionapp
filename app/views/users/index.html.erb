
<div class="row">
  <div class="col-sm-8 col-md-offset-3">
    <h1><i class="fa fa-users"></i>  Administrar Usuarios</h1>
    <% if flash[:notice] %>
      <div class="alert alert-info">
        <button id="notice" type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice]%>
      </div>
    <%end%>

    <div>
      <ul class="pager">
        <li><%= link_to 'Agregar usuario', users_new_path, class:'btn btn-info', :style=>'color:black;'%></li>
      </ul>
    </div>

    <div class="table-responsive "></div>
    <table class="table table-hover">
      <thead>
      <tr>
        <th>Creado en</th>
        <th>ID</th>
        <th>Email</th>
        <th>Admin</th>
        <th colspan="3"></th>

      </tr>
      </thead>
      <tbody>
      <% if @users.each do |user| %>
        <tr>
          <td><%= user.created_at %></td>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.admin %></td>


          <td><%= link_to '', user_path(user), class:"fa fa-eye fa-2x" %></td>
          <td><%= link_to '', user_edit_path(user), class:"fa fa-pencil-square-o fa-2x" %></td>
          <td><%= link_to '', user, method: :delete, data: { confirm: 'Â¿Estas seguro que quieres eliminar?' }, class:"fa fa-trash-o fa-2x" %></td>
        </tr>
      <% end.blank? %>
        <tr>
          <td>No se encontraron usuarios</td>
        </tr>
      <% end %>
      </tbody>
    </table>


  </div>
</div>

